{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@images/*": ["images/*"],
      "@api/*": ["api/*"],
      "@api": ["api"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],
      "@layouts/*": ["layouts/*"],
      "@layouts": ["layouts"],
      "@modules/*": ["modules/*"],
      "@modules": ["modules"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "modules.d.ts"]
}

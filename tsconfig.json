{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@images/*": ["images/*"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@modules/*": ["modules/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "modules.d.ts"]
}
